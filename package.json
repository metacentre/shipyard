{
  "name": "@metacentre/shipyard",
  "version": "1.0.3",
  "description": "metacentre stack building",
  "main": "index.js",
  "scripts": {
    "test": "ava",
    "pretest": "node test/utils/setup-test",
    "posttest": "node test/utils/cleanup",
    "test:watch": "ava --watch"
  },
  "bin": {
    "shipyard": "./bin.js"
  },
  "keywords": [
    "p2p",
    "ssb",
    "metacentre",
    "secret-stack",
    "secure-scuttlebutt"
  ],
  "author": "av8ta",
  "license": "MIT",
  "dependencies": {
    "secret-stack": "^6.4.0",
    "ssb-caps": "^1.1.0",
    "ssb-config": "^3.4.5",
    "ssb-db": "^20.4.0",
    "ssb-master": "^1.0.3",
    "ssb-plugins": "^1.0.4"
  },
  "devDependencies": {
    "@metacentre/shipyard-oasis": "^1.0.5",
    "@metacentre/shipyard-ssb": "^1.0.1",
    "ava": "^3.15.0",
    "fs-extra": "^10.0.0",
    "rimraf": "^3.0.2",
    "ssb-client": "^4.9.0",
    "ssb-identities": "^2.1.1",
    "ssb-lan": "^1.0.0"
  },
  "ava": {
    "verbose": true,
    "concurrency": 1,
    "files": [
      "test/**/*",
      "!test/ssb-shipyard",
      "!test/cleanup.js",
      "!test/utils"
    ]
  },
  "directories": {
    "test": "test"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/metacentre/shipyard.git"
  },
  "bugs": {
    "url": "https://github.com/metacentre/shipyard/issues"
  },
  "homepage": "https://github.com/metacentre/shipyard#readme"
}
